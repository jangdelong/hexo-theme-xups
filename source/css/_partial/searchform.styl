/*!
 * 搜索框
 */
.search-form
  position relative
  padding 10px 70px 0 0
  .form-control
    display block
    width 100%
    padding 5px 5px 5px 10px
    border 2px solid c-ddd
    border-right 0
    line-height: 21px
    outline 0
    box-shadow 2px 2px 4px rgba(0, 0, 0, .07) inset
    &::placeholder
      font-size 14px
      color #999
  .btn
    position absolute
    top 10px
    right 0
    width 70px
    padding 7px 0
    text-align center
    outline 0
    &:hover
      opacity .75